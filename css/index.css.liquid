/*
* Banner
*/

.banner {
  height: 20vh;
  width: 100%;
  box-shadow: inset 0 -20px 30px #00000077;
}

@media(max-width: 1000px) {
  .banner {
    height: 300px;
  }
}

@media(max-width: 560px) {
  .banner {
    height: 53.6vw;
  }
}

.banner img {
  position: relative;   
  object-fit: cover;
  height: 100%;
  width: 100%;
  filter: saturate(0.5);
  z-index: -1;
}

/*
* Text box
*/

.text-box {
  margin: 0 auto;
  padding: 0;
  max-width: 450px;
  display: flex; 
  flex-direction: column;
  justify-content: center;
}

.content-box {
  display: flex;
  margin: auto;
  padding: 40px;
  gap: 100px;
}

@media(max-width: 1500px) {
  .content-box {
    flex-direction: column;
    gap: 0px;
  }
}

#swish-QR {
  display: block;
  margin: auto;
  max-width: 300px;
  height: 455px;
  padding: 40px;
}

@media(max-width: 550px) {
  #swish-QR {
    padding: 40px 0;
    width: 100%;
    height: auto;
  }
}