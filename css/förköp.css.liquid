.no-overflow {
  overflow-y: hidden;
}

@media(max-width: 900px) {
  .no-overflow {
    overflow-y: visible;
  }
}

#formulär {
  max-width: 500px;
  margin: 0 auto;
  padding: 40px;
  flex-direction: column;
  display: flex;
  position: relative;
  top: 0;
  transition: top 1s;
  height: calc(100vh - 60px - 80px);
  min-height: calc(100vh - 60px - 80px);
  width: calc(100vw - 500px - 80px);
  overflow-y: hidden;
}

@media(max-width: 1000px) {
  #formulär {
    width: calc(100% - 80px);
    max-width: 500px;
    margin: 0 auto;
  }
}

#swish-QR {
  margin: auto;
  padding: 20px;
  height: 550px;
  opacity: 0;
  transition: opacity 1s;
  z-index: -1;
}

form {
  transition: opacity 1s;
  max-width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 800px;
}

form label {
  margin: 0 0 0 5px;
  font-size: 16px;
  font-weight: bold;
  display: block;
}

form label, form legend {
  margin: 0 0 10px 5px;
  font-size: 16px;
  font-weight: bold;
  display: block;
}

form .inline-label {
  margin: -5px 20px 0 0;
  font-size: 16px;
  font-weight: bold;
  display: inline;
}

form input {
  display: block;
  height: 40px;
  border-radius: 20px;
  border-style: none;
}

form input[type=text] {
  width: 100%;
  background-color: #EEE;
  padding: 12px 20px;
  margin: 8px 0;
  box-sizing: border-box;
}

form input[type=radio] {
  margin: 10px 10px 35px 6px;
  height: 20px;
  width: 20px;
  font-weight: bold;
  display: inline;
}

form input[type=submit] {
  font-size: 15px;
  font-weight: bold;
  background-color: var(--off-yellow);
  width: 100px;
}

form input[type=submit]:hover {
  opacity: 0.5;
  cursor: pointer;
}