#progress-container {
  margin: 1vh 0 5.2vh 0;
  width: 100%;
  background: var(--blue);
}

#progress-bar {
  border-radius: 40px;
  
  background-color: #456d84;
  box-shadow: 10px 10px 16px #00000066;
  
  height: 4vh;

  margin: 0;
  z-index: -1;
}

#progress-bar-markings {
  display: flex;
  flex-direction: row;
  height: 2.8vh;
  width: 100%;
  margin: 0 0 1.1vh 0;
  padding: 0;
  z-index: 1;
}

.progress-bar-markings-container {
  width: calc(100% / 5);
  margin: 0;
  padding: 0;
  z-index: 1;
}

#progress-bar-markings span {
  font-family: Canterbury;
  display: block;
  font-size: 1.7vh;
  font-weight: bold;
  margin: 0 0 0 calc((45vh - 11vh) / 5 - 2vh);
  white-space: nowrap;
  padding: 0;
  color: var(--off-yellow);
}

#progress-bar-markings .vl {
  display: block;
  height: 4.1vh;
  border-right: 2px solid #0009;
  margin: 2.2vh 0 0 0;
  padding: 0;
}

#progress-bar-wrapper {
  height: 100%;
  width: 100%;
  overflow: hidden;
  transition: all 1s;
}

#progress-fill {
  display: inline-block;
  height: 100%;
  width: calc(100vw - 100px);
  border-radius: 40px;
  background-color: var(--off-yellow);
}

@media(max-width: 1000px) {
  #progress-container {
    margin: 10px auto 60px auto;
    width: 500px;
  }

  #progress-bar {
    height: 45px;
  }

  #progress-bar-markings {
    height: 25px;
    margin: 0 0 11px 0;
  }

  #progress-bar-markings span {
    font-size: 20px;
    margin: 0 0 0 calc(500px / 5 - 35px);
  }

  #progress-bar-markings .vl {
    height: 45px;
    margin: 17.5px 0 0 0;
  }

  #progress-fill {
    border-radius: 20px;
  }
}

@media(max-width: 560px) {
  #progress-container {
    width: 100%;
  }

  #progress-bar {
    height: 8vw;
  }

  #progress-bar-markings {
    height: 5vw;
    margin: 0 0 2vw 0;
  }

  #progress-bar-markings span {
    font-size: 3.6vw;
    margin: 0 0 0 calc((100vw - 80px) / 5 - 5vw);
  }

  #progress-bar-markings .vl {
    height: 8vw;
    margin: 3.5vw 0 0 0;
  }

  #progress-fill {
    border-radius: 20px;
  }
}

.loading {
  width: 100% !important;
  background-size: 100px 100px;
  overflow: hidden;

  background-image: linear-gradient(
    -45deg,
    #0002 25%,
    transparent 25%,
    transparent 50%,
    #0002 50%,
    #0002 75%,
    transparent 75%,
    transparent
  );

  animation: moveBG 2s linear infinite;
}

@keyframes moveBG {
  0% {
    background-position: 0px 0px;
  }
  100% {
    background-position: 100px 100px;
  }
}

