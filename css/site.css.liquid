---

@font-face {
  font-family: 'Canterbury';
  font-style: normal;
  font-weight: 400;
  src: local('')
  , url("{{ '/fonts/Canterbury.woff2' }}") format('woff2')
}

@keyframes fade-in {
  from {
    opacity: 1;
  }
  to {
    opacity: 0.8;
  }
}

@keyframes fade-out {
  from {
    opacity: 0.8;
  }
  to {
    opacity: 1;
  }
}

:root {
  --off-yellow: #fff59b;
  --blue: #00446b;
  --light-blue: #59b6eb;
}

main {
  z-index: 2;
  min-height: calc(100vh);
}

body {
  font-family: "Source Sans Pro", Helvetica, Arial, sans-serif;
  min-height: 100vh;
  max-width: 100vw;
  margin: 0;
}

.fadeOnHover {
  animation: fade-out 0.2s forwards;
}

.fadeOnHover:hover {
  animation: fade-in 0.2s forwards;
  cursor: pointer;
}

.centered {
  margin: 0;
  position: absolute;
  -ms-transform: translateX(-50%) translateY(-50%);
  transform: translateX(-50%) translateY(-50%);
  top: 50%;
  left: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  white-space: nowrap;
}

.box-shadow {
  box-shadow: 0px 10px 20px #00000055;
}

.horizontal-flex {
  padding: 60px 0 0 0;
  width: calc(100vw - 40vh - 11vh);
  display: flex;
  flex-direction: row;
  height: calc(100vh - 60px);
}

@media(max-width: 1000px) {
  .horizontal-flex {
    width: 100vw;
    flex-direction: column;
    height: auto;
  }
}

.vertical-flex {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.aside {
  position: fixed;
  display: flex;
  flex-direction: column;
  right: 0;
  padding: 4vh 5.5vh;
  background: var(--blue);
  color: var(--off-yellow);
  width: 40vh;
  height: calc(100vh - 60px - 8vh);
}

.aside h1 {
  font-size: 6vh;
  margin: 0;
  font-family: Canterbury;
}

.aside h3 {
  font-size: 3vh;
  margin: 0 auto;
  width: 80%;
  padding: 0 0 2vh 0;
  box-shadow: 0 -3px 0 0 var(--off-yellow) inset;
  font-weight: bolder;
  font-family: Canterbury;
}

.aside p {
  font-size: 2vh;
  margin: 1.8vh 0 0 0;
  font-weight: bold;
}

.aside .small {
  font-size: 1.7vh;
}

.aside ul {
  padding: 0 0 0 0;
  margin: 0;
  list-style: none;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 4; /* default 0 */
  text-align: center;
}

@media(max-width: 1000px) {
  .aside {
    position: relative;
    padding: 40px 30px;
    background: var(--blue);
    color: var(--off-yellow);
    width: auto;
    min-width: calc(100% - 60px);
    height: 850px;
  }
  
  .aside h1 {
    font-size: 55px;
  }
  
  .aside h3 {
    font-size: 26px;
    width: 200px;
    padding: 0 0 20px 0;
  }
  
  .aside p {
    font-size: 16px;
    margin: 20px 0 0 0;
  }
  
  .aside ul {
    width: 100%;
    max-width: 500px;
    margin: 0 auto;
  }
}

h1 {
  font-size: 2.2em;
  margin: 20px 0 20px 0;
}

h2 {
  font-size: 1.6em;
  margin: 20px 0 20px 0;
}

h3 {
  font-size: 1.4em;
  margin: 10px 0 30px 0;
}

p {
  font-size: 1.1em;
  line-height: 1.5;
  margin: 1em 0;
}